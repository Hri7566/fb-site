---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="bg-blend-normal bg-gradient-to-tr from-zinc-950 to-zinc-900 min-h-full text-slate-100"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Firebomb Modpack" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/fb-server-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Firebomb{title ? " - " + title : ""}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
